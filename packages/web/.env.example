# GitHub OAuth (create at https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# NextAuth (generate with: openssl rand -base64 32)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# Control Plane
CONTROL_PLANE_URL=https://CodInspect-control-plane.YOUR-ACCOUNT.workers.dev
NEXT_PUBLIC_WS_URL=wss://CodInspect-control-plane.YOUR-ACCOUNT.workers.dev

# Control Plane Authentication (must match control plane's INTERNAL_CALLBACK_SECRET)
# Generate with: openssl rand -base64 32
INTERNAL_CALLBACK_SECRET=

# Access Control (comma-separated, leave empty to allow all GitHub users)
ALLOWED_EMAIL_DOMAINS=
ALLOWED_USERS=
